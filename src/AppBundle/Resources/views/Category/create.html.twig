{% extends "::base.html.twig" %}

{% block title %}Создание категории{% endblock %}

{% block body %}
    <h1 class="title-admin" >
        Создание категории
    </h1>
    <form action="{{ path('category.create') }}" method="post"  class="create-form " >
        {{ form_errors(form) }}
        <div class="form-group">


        {{ form_row(form.name ) }}
        {{ form_row(form.parent_id , { 'attr': {'class': 'browser-default'} }) }}
        </div>
        {{ form_rest(form) }}



        <input type="submit"  class="btn waves-effect waves-light  btn-large" value="Сохранить" />
    </form>
{% endblock %}
